<%- include('../partials/head.ejs') %>
<%- include('../partials/menu.ejs') %>
<br>
<div class="container">
    <div class="card">
        <div class="card-header">Editar Usuario</div>
        <div class="card-body">
            <form method="POST" action="/usuarios/alterar">
                <input type="hidden" name="id" value="<%= usuario.id %>">
                <div class="form-floating mb-3">
                    <input type="text" name="nome" value="<%= usuario.nome %>" class="form-control" id="nome" placeholder="Nome do usuário" required>
                    <label for="nome">Nome do usuário</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" name="email" value="<%= usuario.email %>" class="form-control" id="email" placeholder="E-mail" required>
                    <label for="email">E-mail</label>
                </div>
                <div class="form-floating mb-3">
                    <button type="submit" class="btn btn-primary">Alterar</button>
                    <a href="/usuarios" class="btn btn-warning">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>