<%- include('../partials/head.ejs') %>
<%- include('../partials/menu.ejs') %>
<br>
<div class="container">
    <div class="card">
        <div class="card-header">Editar Gênero</div>
        <div class="card-body">
            <form method="POST" action="/generos/alterar">
                <input type="hidden" name="id" value="<%= genero.id %>">
                <div class="form-floating mb-3">
                    <input type="text" name="genero" value="<%= genero.genero %>" class="form-control" id="genero" placeholder="Nome do gênero" required>
                    <label for="genero">Nome do gênero</label>
                </div>
                <div class="form-floating mb-3">
                    <button type="submit" class="btn btn-primary">Alterar</button>
                    <a href="/generos" class="btn btn-warning">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

